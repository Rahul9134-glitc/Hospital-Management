<%- include('../partials/header') %>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-dark text-white py-3">
                <h4 class="card-title mb-0">üë§ Add New User</h4>
            </div>
            
            <div class="card-body p-4">
                
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success"><%= success %></div>
                <% } %>
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
                
                <form action="/users" method="POST" class="row g-3">
                    
                    <div class="col-md-6">
                        <label for="name" class="form-label fw-semibold">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>

                    <div class="col-md-6">
                        <label for="role" class="form-label fw-semibold">User Role</label>
                        <select class="form-select" id="role" name="role" required>
                            <option value="" disabled selected>Select Role</option>
                            <option value="Staff">Staff (Receptionist/Nurse)</option>
                            <option value="Doctor">Doctor</option>
                            <option value="Admin">Admin (Use with Caution)</option>
                        </select>
                    </div>

                    <div class="col-12"><hr></div>
                    
                    <div class="col-md-6">
                        <label for="username" class="form-label fw-semibold">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                        <div class="form-text">Used for login. Must be unique.</div>
                    </div>

                    <div class="col-md-6">
                        <label for="password" class="form-label fw-semibold">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                        <div class="form-text">Minimum 6 characters recommended.</div>
                    </div>
                    
                    <div class="col-12 mt-4">
                        <button type="submit" class="btn btn-success btn-lg me-3">
                            <i class="bi bi-person-add"></i> Create User Account
                        </button>
                        <a href="/users" class="btn btn-secondary btn-lg">
                            ‚Üê Back to User List
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>