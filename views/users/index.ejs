<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">üßë‚Äçüíª User Management</h2>
    <a href="/users/new" class="btn btn-success btn-lg shadow-sm">
        <i class="bi bi-person-plus-fill"></i> Add New User
    </a>
</div>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<div class="card shadow-lg border-0 rounded-4">
    <div class="card-body p-4">
        
        <% if (users && users.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Created On</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><i class="bi bi-person-circle me-2"></i><%= user.name %></td>
                                <td><span class="badge bg-secondary"><%= user.username %></span></td>
                                
                                <td>
                                    <% if (user.role === 'Admin') { %>
                                        <span class="badge bg-danger">Admin</span>
                                    <% } else if (user.role === 'Doctor') { %>
                                        <span class="badge bg-info">Doctor</span>
                                    <% } else { %>
                                        <span class="badge bg-primary"><%= user.role %></span>
                                    <% } %>
                                </td>
                                
                                <td><%= user.createdAt.toLocaleDateString() %></td>
                                
                                <td class="text-center">
                                    <% if (user.role !== 'Admin' || user._id.toString() !== user.id.toString()) { %>
                                        <form action="/users/<%= user._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user: <%= user.name %>?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete User">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    <% } else { %>
                                        <span class="text-muted small">Current Admin</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center">
                No users found. <a href="/users/new" class="alert-link">Create the first user account here.</a>
            </div>
        <% } %>

    </div>
</div>

<%- include('../partials/footer') %>