<%- include('../partials/header') %>

<div class="container py-5">
  <div class="card shadow-lg border-0 rounded-4 col-lg-7 mx-auto">
    <div class="card-header text-white py-3" style="background: linear-gradient(90deg, #00b4d8, #0077b6);">
      <h3 class="mb-0 fw-bold">➕ Add New Doctor / Staff</h3>
    </div>

    <div class="card-body p-4 bg-light">
      <form action="/doctors" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label fw-semibold">👨‍⚕️ Doctor Name</label>
          <input type="text" class="form-control shadow-sm" id="name" name="name" placeholder="Enter doctor's full name" required>
        </div>

        <div class="mb-3">
          <label for="specialization" class="form-label fw-semibold">🩺 Specialization</label>
          <input type="text" class="form-control shadow-sm" id="specialization" name="specialization" placeholder="e.g. Cardiologist, Neurologist" required>
        </div>

        <div class="mb-3">
          <label for="department" class="form-label fw-semibold">🏢 Department</label>
          <input type="text" class="form-control shadow-sm" id="department" name="department" placeholder="Enter department name" required>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="email" class="form-label fw-semibold">📧 Email</label>
            <input type="email" class="form-control shadow-sm" id="email" name="email" placeholder="example@hospital.com" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="contact" class="form-label fw-semibold">📞 Contact Number</label>
            <input type="text" class="form-control shadow-sm" id="contact" name="contact" placeholder="+91 XXXXX XXXXX" required>
          </div>
        </div>

        <div class="mb-3">
          <label for="salary" class="form-label fw-semibold">💰 Salary (Optional)</label>
          <input type="number" class="form-control shadow-sm" id="salary" name="salary" min="0" placeholder="Enter salary amount">
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
          <button type="submit" class="btn btn-success px-4 fw-semibold shadow-sm">✅ Save Doctor</button>
          <a href="/doctors" class="btn btn-secondary px-4 fw-semibold shadow-sm">❌ Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  .form-control:focus {
    border-color: #00b4d8;
    box-shadow: 0 0 5px rgba(0, 180, 216, 0.4);
  }
  .card {
    transition: all 0.2s ease-in-out;
  }
  .card:hover {
    transform: scale(1.01);
    box-shadow: 0 0 25px rgba(0, 150, 200, 0.2);
  }
</style>

